{
  "name": "gigatalk",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electronBuild": "electron-builder"
  },
  "build": {
    "appId": "com.example.gigatalk",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "main.js"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.3",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "mediasoup-client": "^3.7.17",
    "socket.io-client": "^4.8.1"
  }
}
